<% layout('./layouts/boilerplate') %>
    <h1>All Fungi</h1>
    <ul>
        <% for (let fungus of fungi) {%>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-8">
                        <img src="<%=fungus.image %>" alt="">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%=fungus.variety %>
                            </h5>
                            <p class="card-text">
                                <%= fungus.description %>
                            </p>
                            <p class="card-text">
                                <small class="text-dark">
                                    <%= fungus.country %>,
                                        <%= fungus.city %>
                                </small>
                            </p>
                            <a class="btn btn-primary" href="fungi/<%=fungus._id %>">View <%=fungus.variety %></a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>

    </ul>
    <footer><a href="/fungi/new">New Fungus</a></footer>