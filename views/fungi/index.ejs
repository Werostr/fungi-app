<% layout('./layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Fungi</h1>
<div>
  <a href="/fungi/new">New Fungus</a>
</div>
<div>
  <% for (let fungus of fungi) {%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img class="img-fluid" src="<%=fungus.images[0].url %>" alt="" />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%=fungus.variety %></h5>
          <p class="card-text"><%= fungus.description %></p>
          <p class="card-text">
            <small class="text-dark">
              <%= fungus.country %>, <%= fungus.city %>
            </small>
          </p>
          <a class="btn btn-primary" href="fungi/<%=fungus._id %>"
            >View <%=fungus.variety %></a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>";
  const fungi = {features: <%- JSON.stringify(fungi) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
