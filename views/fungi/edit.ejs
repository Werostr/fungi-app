<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">EditFungus</h1>
        <div class="col-md-6 offset-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <form action="/fungi/<%=fungus._id%>?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label" for="variety">Variety</label>
                            <input class="form-control" type="text" id="variety" name="fungus[variety]"
                                value="<%=fungus.variety %>" required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="country">Country</label>
                            <input class="form-control" type="text" id="country" name="fungus[country]"
                                value="<%=fungus.country %>" required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="city">City</label>
                            <input class="form-control" type="text" id="city" name="fungus[city]" value="<%=fungus.city %>"
                                required>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="description">Description</label>
                            <textarea class="form-control" type="text" id="description" name="fungus[description]"
                                required><%=fungus.description %></textarea>
                            <div class="valid-feedback">
                                Nice
                            </div>
                        </div>
                        <div class="input-group mb-3">
                            <label class="input-group-text" for="poisonous">Poisonous</label>
                            <select class="form-select" id="poisonous" name="fungus[poisonous]">
                                <option value="false" <%=fungus.poisonous===false ? 'selected' : '' %>>false</option>
                                <option value='true' <%=fungus.poisonous===true ? 'selected' : '' %> >true</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label custom-file-label">Add more Image(s)</label>
                            <input
                              class="form-control custom-file"
                              type="file"
                              id="image"
                              name="image"
                              multiple
                            />
                        </div>
                        <div class="mb-3">
                            <% fungus.images.forEach(function(img,i){ %>
                                <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                                <div class="form-check-inline">
                                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                                </div>
                                <label for="image-<%=i%>">Delete?</label>
                            <% }) %>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-info">Update</button>
                        </div>
                    </form>
                    <a href="/fungi/<%=fungus._id%>">Back to fungus</a>
                </div>
            </div>
        </div>
    </div>