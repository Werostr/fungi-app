<% layout('./layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <img src="<%=fungus.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=fungus.variety %>
                    </h5>
                    <p class="card-text">
                        <%=fungus.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%=fungus.poisonous%>
                    </li>
                    <li class="list-group-item">
                        <%=fungus.author.username%>
                    </li>
                    <li class="list-group-item text-muted">
                        <%= fungus.country %>,
                            <%= fungus.city %>
                    </li>
                </ul>
                <% if (currentUser && fungus.author.equals(currentUser._id)){ %>
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/fungi/<%=fungus._id%>/edit">Edit</a>
                        <form class="d-inline" action="/fungi/<%=fungus._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">DELETE</button>
                        </form>
                    </div>
                    <% } %>
                        <div class="card-footer text-muted">
                            2 days ago
                        </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Leave a review</h2>
            <form action="/fungi/<%=fungus._id%>/reviews" method="POST" class="mb-3 needs-validation" novalidate>
                <div class="mb-3">
                    <label class='form-label' for="rating">Rating</label>
                    <input type="range" class="form-range" name="review[rating]" min="1" max="5">
                </div>
                <div class="mb-3">
                    <label class='form-label' for="comment">Review</label>
                    <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="3"
                        required></textarea>
                    <div class="valid-feedback">
                        Nice
                    </div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
            <% for(let review of fungus.reviews){ %>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Rating: <%=review.rating %>
                        </h5>
                        <p class="card-text">Comment: <%=review.comment %>
                        </p>
                        <form action="/fungi/<%=fungus._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>