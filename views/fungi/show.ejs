<% layout('./layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <img src="<%=fungus.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=fungus.variety %>
                    </h5>
                    <p class="card-text">
                        <%=fungus.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <%=fungus.poisonous%>
                    </li>
                    <li class="list-group-item text-muted">
                        <%= fungus.country %>,
                            <%= fungus.city %>
                    </li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/fungi/<%=fungus._id%>/edit">Edit</a>
                    <form class="d-inline" action="/fungi/<%=fungus._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">DELETE</button>
                    </form>

                </div>
                <div class="card-footer text-muted">
                    2 days ago
                </div>
            </div>
        </div>
    </div>