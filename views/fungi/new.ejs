<% layout('./layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">Share Your &#127812 with us</h1>
  <div class="col-md-6 offset-md-3">
    <div class="card shadow">
      <div
        class="card-body p-3 rounded"
        style="
          background-image:linear-gradient(
            rgba(255, 255, 255, 0.2),
            rgba(255, 255, 255, 0.2)
          ),
            url('https://images.unsplash.com/photo-1585758942414-7a30b116f2af?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        color: rgb(64, 14, 73); "
      >
        <form
          action="/fungi"
          method="POST"
          novalidate
          class="needs-validation"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label class="form-label" for="variety">Variety</label>
            <input
              class="form-control"
              type="text"
              id="variety"
              name="fungus[variety]"
              required
            />
            <div class="valid-feedback">Nice</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="country">Country</label>
            <input
              class="form-control"
              type="text"
              id="country"
              name="fungus[country]"
              required
            />
            <div class="valid-feedback">Nice</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="city">City</label>
            <input
              class="form-control"
              type="text"
              id="city"
              name="fungus[city]"
              required
            />
            <div class="valid-feedback">Nice</div>
          </div>
          <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea
              class="form-control"
              type="text"
              id="description"
              name="fungus[description]"
              required
            ></textarea>
            <div class="valid-feedback">Nice</div>
          </div>
          <div class="input-group mb-3">
            <label class="input-group-text" for="poisonous">Poisonous</label>
            <select
              class="form-select"
              id="poisonous"
              name="fungus[poisonous]"
              required
            >
              <option value="false">No</option>
              <option value="true">Yes</option>
            </select>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label custom-file-label"
              >Add Images</label
            >
            <input
              class="form-control custom-file"
              type="file"
              id="image"
              name="image"
              multiple
            />
          </div>
          <div class="mb-3">
            <button class="btn btn-light">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
